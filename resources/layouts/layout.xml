<layout id="WatchFace">
    <drawable class="Background" />
    
    <drawable id = "divider" class="LineDrawable" >
    	<param name="x1">120</param> 
    	<param name="y1">20</param>
    	<param name="x2">120</param> 
    	<param name="y2">220</param>
		<param name="lineColor">Gfx.COLOR_YELLOW</param>
    </drawable>
    
    <label id="TimeHourLabel" x="90" y="59" font="Gfx.FONT_NUMBER_HOT" justification="Gfx.TEXT_JUSTIFY_RIGHT" color="Gfx.COLOR_BLUE" />
    <label id="TimeMinuteLabel" x="90" y="120" font="Gfx.FONT_NUMBER_HOT" justification="Gfx.TEXT_JUSTIFY_RIGHT" color="Gfx.COLOR_BLUE" />
    <label id="TimeSecondLabel" x="113" y="150" font="Gfx.FONT_TINY" justification="Gfx.TEXT_JUSTIFY_RIGHT" color="Gfx.COLOR_BLUE" />
     
    <label id="TimeWeekDayLabel" x="114" y="56" font="Gfx.FONT_XTINY" justification="Gfx.TEXT_JUSTIFY_RIGHT" color="Gfx.COLOR_BLUE" />
    <label id="TimeMonthLabel" x="100" y="30" font="Gfx.FONT_XTINY" justification="Gfx.TEXT_JUSTIFY_RIGHT" color="Gfx.COLOR_BLUE" />
    <label id="TimeDayLabel" x="115" y="33" font="Gfx.FONT_XTINY" justification="Gfx.TEXT_JUSTIFY_RIGHT" color="Gfx.COLOR_BLUE" />
 </layout>