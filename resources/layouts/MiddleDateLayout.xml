    	<param name="y1">54</param>
    	<param name="x2">120</param> 
    	<param name="y2">186</param>
		<param name="lineColor">Gfx.COLOR_YELLOW</param>
    </drawable>
    
    <label id="TimeHourLabel" x="90" y="53" font="Gfx.FONT_NUMBER_HOT" justification="Gfx.TEXT_JUSTIFY_RIGHT" color="Gfx.COLOR_BLUE" />
    <label id="TimeMinuteLabel" x="90" y="132" font="Gfx.FONT_NUMBER_HOT" justification="Gfx.TEXT_JUSTIFY_RIGHT" color="Gfx.COLOR_BLUE" />
